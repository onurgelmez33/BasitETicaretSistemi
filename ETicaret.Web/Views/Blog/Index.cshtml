@model IEnumerable<BlogDetailsModel>
@{
    ViewBag.Title = "Blog";
}

<!-- Title Page -->
<section class="bg-title-page p-t-40 p-b-50 flex-col-c-m" style="background-image: url(/Content/images/heading-pages-05.jpg);">
    <h2 class="l-text2 t-center">
        Blog
    </h2>
</section>

<!-- content page -->
<section class="bgwhite p-t-60">
    <div class="container">
        <div class="row">
            <div class="col-md-12 p-b-75">
                <div class="p-r-50 p-r-0-lg">
                    @foreach (var item in Model)
                    {
                        <!-- item blog -->
                        <div class="item-blog p-b-80">
                            <a href="~/@item.Slug" class="item-blog-img pos-relative dis-block hov-img-zoom">
                                <img src="@item.Image" alt="@item.Name">

                                <span class="item-blog-date dis-block flex-c-m pos1 size17 bg4 s-text1">
                                    @item.CreatedOn
                                </span>
                            </a>

                            <div class="item-blog-txt p-t-33">
                                <h4 class="p-b-11">
                                    <a href="~/@item.Slug" class="m-text24">
                                        @item.Name
                                    </a>
                                </h4>
                                @if (!string.IsNullOrEmpty(item.Tags))
                                {
                                    <div class="s-text8 flex-w flex-m p-b-21">
                                        <span>
                                            @item.Tags
                                        </span>
                                    </div>
                                }

                                <p class="p-b-12">
                                    @item.Short
                                </p>

                                <a href="~/@item.Slug" class="s-text20">
                                    Devamını Göster
                                    <i class="fa fa-long-arrow-right m-l-8" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                <div class="pagination flex-m flex-w p-r-50">
                    <a href="#" class="item-pagination flex-c-m trans-0-4 active-pagination">1</a>
                    <a href="#" class="item-pagination flex-c-m trans-0-4">2</a>
                </div>
            </div>
        </div>
    </div>
</section>


