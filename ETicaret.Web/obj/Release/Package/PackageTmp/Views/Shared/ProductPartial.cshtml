@model ProductModel
@if (!Model.SpecialPrice.HasValue && !(Model.SpecialPriceStartDate < DateTime.Now && Model.SpecialPriceEndDate > DateTime.Now))
{
    <div class="item-slick2 p-l-15 p-r-15">
        <!-- Block2 -->
        <div class="block2">
            <div class="block2-img wrap-pic-w of-hidden pos-relative">
                @if (Model.FreeShipping)
                {
                    <div class="label">
                        Kargo Bedava
                    </div>
                }
                @if (Model.Pictures.Count > 0)
                {
                    <img src="@Model.Pictures.FirstOrDefault()" alt="@Model.Name">
                }

                <div class="block2-overlay trans-0-4">
                    <div class="block2-btn-addcart w-size1 trans-0-4">
                        <!-- Button -->
                        <button class="flex-c-m size1 bg4 bo-rad-23 hov1 s-text1 trans-0-4 btnSepeteEkle" data-id="@Model.Id">
                            Sepete Ekle
                        </button>
                    </div>
                </div>
            </div>

            <div class="block2-txt p-t-20">
                <a href="~/@Model.Slug" class="block2-name dis-block s-text3 p-b-5">@Model.Name</a>

                <span class="block2-price m-text6 p-r-5">
                    @if (DateTime.Now < Model.SpecialPriceEndDate && DateTime.Now > Model.SpecialPriceStartDate && Model.SpecialPrice.HasValue)
                    {
                        @(Model.SpecialPrice.Value.ToString("n"))<text>₺</text>
                    }
                    else
                    {
                        @(Model.Price.ToString("n"))<text>₺</text>
                    }
                </span>
            </div>
        </div>
    </div>
}

