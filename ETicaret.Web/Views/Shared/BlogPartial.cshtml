@model HomePageBlogModel
<div class="col-sm-10 col-md-4 p-b-30 m-l-r-auto">
    <!-- Block3 -->
    <div class="block3">
        <a href="~/@Model.Slug" class="block3-img dis-block hov-img-zoom">
            <img src="@Model.Image" alt="@Model.Baslik">
        </a>

        <div class="block3-txt p-t-14">
            <h4 class="p-b-7">
                <a href="~/@Model.Slug" class="m-text11">
                    @Model.Baslik
                </a>
            </h4>
            <span class="s-text7">@Model.Tarih</span>

            <p class="s-text8 p-t-16">
                @Model.KisaAciklama
            </p>
        </div>
    </div>
</div>